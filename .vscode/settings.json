{
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "node_modules": true,
      "**/coverage": true,
      "**/.nyc_output": true,
      "**/*.js": {
        "when": "$(basename).ts"
      },
      "**/*.d.ts": {
        "when": "$(basename).ts"
      },
      "**/*.js.map": {
        "when": "$(basename)"
      },
      "test/{integration,rules}/**/*.{fix,lint}": true,
    }
}
